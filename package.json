{
  "name": "obsidian-client",
  "private": true,
  "version": "0.0.1-snapshot.0",
  "author": "thorminate",
  "description": "Minecraft, Modularized.",
  "main": "dist/electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "app:dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "app:build:win": "set version=\"0.0.1-snapshot.0\" && npm run vite:build && tsc && electron-builder --win",
    "app:build:mac": "set version=\"0.0.1-snapshot.0\" && npm run vite:build && tsc && electron-builder --mac",
    "app:build:linux": "set version=\"0.0.1-snapshot.0\" && npm run vite:build && tsc && electron-builder --linux",
    "app:build": "set version=\"0.0.1-snapshot.0\" && npm run vite:build && tsc && concurrently \"electron-builder --win\" \"electron-builder --mac\" \"electron-builder --linux\" && echo 'Build Complete\nCleaning Up...' && npm run app:build:cleanup && echo 'Cleanup Complete\nAll Done!'",
    "app:build:cleanup": "rm -rf ./releases/temp && rm -rf ./dist ",
    "app:preview": "npm run vite:build && tsc && electron ."
  },
  "build": {
    "productName": "Obsidian Client",
    "compression": "maximum",
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "directories": {
      "output": "./releases/temp",
      "buildResources": "./src/assets"
    },
    "files": [
      "./dist"
    ],
    "extraMetadata": {
      "main": "./dist/electron/main/main.js"
    },
    "win": {
      "artifactName": "../${version}/win/${productName} ${version} Windows.${ext}",
      "icon": "./src/assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "license": "./LICENSE.md",
      "runAfterFinish": true,
      "oneClick": false,
      "uninstallDisplayName": "Obsidian Client",
      "uninstallerIcon": "./src/assets/icon.ico",
      "installerIcon": "./src/assets/icon.ico",
      "installerHeaderIcon": "./src/assets/icon.ico",
      "shortcutName": "Obsidian Client"
    },
    "mac": {
      "artifactName": "../${version}/mac/${productName} ${version} Mac.${ext}",
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      },
      "icon": "./src/assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": true
    },
    "linux": {
      "artifactName": "../${version}/linux/${productName} ${version} Linux-arm64.${ext}",
      "desktop": {
        "StartupNotify": false,
        "Encoding": "UTF-8"
      },
      "category": "Gaming",
      "target": {
        "target": "AppImage",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "./src/assets/icon.png"
    }
  },
  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@clack/prompts": "^0.9.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "concurrently": "^7.6.0",
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0",
    "picocolors": "^1.1.1",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vue-tsc": "^0.34.7"
  }
}
